//- 인자를 받아서 사용할 수 있음
mixin video(data)
    div
        h4
            a(href=`/videos/video/${data.id}`)=data.title
            //- 이경로는 절대경로인가 상대경로인가?
        ul
            
        small=data.createdAt.toLocaleDateString("en-US", { weekday: "long", year: "numeric", month: "long", day: "numeric" })
        p description : #{data.description}
        p views : #{data.meta.views} #{data.meta.views === 1 ? "view" : "views"}
        p rating : #{data.meta.rating}/5.
        p hashtags : #{data.hashtags.join(", ")}