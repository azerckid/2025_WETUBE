extends ../base.pug

block content
    h2 Join
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Email", type="email", name="email", required)
        input(placeholder="Username", type="text", name="username", required)
        input(placeholder="Password", type="password", name="password", required)
        input(placeholder="Confirm Password", type="password", name="password2", required)
        input(placeholder="Name", type="text", name="name", required)
        input(placeholder="Location", type="text", name="location", required)
        input(type="submit", value="Join")
        
        div.social-login
                a(href="/auth/github/start").social__btn.social__btn--github
                    i.fab.fa-github
                    |  Continue with Github &rarr;
   
    div.auth-switch
        span Already have an account? 
        a(href="/auth/login") Log in now &rarr;
