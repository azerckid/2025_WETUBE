extends ../base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Email", type="email", name="email", required)
        input(placeholder="Password", type="password", name="password", required)
        input(type="submit", value="Login")
        br
        div.social-login
            a(href="/auth/github/start").social__btn.social__btn--github
                i.fab.fa-github
                |  Continue with Github &rarr;
    hr
    div.auth-switch
        span Don't have an account?
        a(href="/auth/join") Create one now &rarr;
