extends ../base.pug

block content
    h2 Edit Profile
    if errorMessage
        span=errorMessage

    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        label(for="name") Name
        input(name="name", placeholder=`${user.name}`, value=user.name, type="text", required)
        label(for="email") Email
        input(name="email", placeholder=`${user.email}`, value=user.email, type="email", required)
        label(for="username") Username
        input(name="username", placeholder=`${user.username}`, value=user.username, type="text", required)
        label(for="location") Location
        input(name="location", placeholder=`${user.location}`, value=user.location, type="text", required)
        label(for="submit") Update Profile
        input(type="submit", value="Update Profile")
        
        if !user.socialOnly
            div.edit-profile__password
                a(href="/users/profile/change-password") Change Password &rarr;