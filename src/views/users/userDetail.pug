extends ../base.pug
include ../mixins/video

block content
    h2 Welcome #{user.username}
    div.profile__data
    if user.socialOnly
        img(src=user.avatarUrl, width="100", height="100", style="border-radius: 50%")
    else
        img(src="/" + user.avatarUrl, width="100", height="100", style="border-radius: 50%")  
    h3=user.name
    
    if user.videos.length === 0 
        h5 No videos found
    else
        div.video-grid
            each video in user.videos
                +video(video)
