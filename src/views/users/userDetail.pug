extends ../base.pug
include ../mixins/video

block content
    div.profile__data
        div
            h2 Welcome #{user.username}
        div    
            if user.socialOnly
                img(src=user.avatarUrl, width="100", height="100", style="border-radius: 50%").avatar
            else
                img(src="/" + user.avatarUrl, width="100", height="100", style="border-radius: 50%").avatar
        div
            h3=user.name
            if user.location
                h5=user.location
            else
                h5 No location
            if user.socialOnly
                h5=user.socialOnly
            else
                h5 No social      
        
    if user.videos.length === 0 
        h5 No videos found
    else
        div.video-grid
            each video in user.videos
                +video(video)
